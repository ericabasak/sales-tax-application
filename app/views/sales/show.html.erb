<% @products.each do |p| %>
    <%= p.name %>
    <%= number_to_currency(p.price) %>
    <%= p.imported %>
<% end %>


<%= form_with(scope: "products") do |p| %>
    <%= p.select :name, @products.map { |p| [p.name]} %>
    <%= p.submit %>
  <% end %>
  

